    <body>
        <%- include("../components/navs/outside-navbar.ejs")%>

        <main>
            <section
                class="py-16 text-center bg-gradient-to-r from-indigo-500 to-purple-600 text-white">
                <div class="container mx-auto">
                    <h2 class="text-4xl font-extrabold">AI-Powered HR Assessment</h2>
                    <p class="mt-4 text-lg">
                        Find the best candidates with AI-driven analysis and smart filtering.
                    </p>
                    <div class="mt-6">
                        <a
                            href="#"
                            class="bg-white text-indigo-600 px-6 py-3 rounded shadow-lg font-semibold hover:bg-gray-200"
                            >Get Started</a
                        >
                    </div>
                </div>
            </section>

            <!-- Features Section -->
            <section class="py-12 bg-white">
                <div class="container mx-auto text-center">
                    <h3 class="text-3xl font-bold text-gray-800">Why Choose Us?</h3>
                    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-8">
                        <!-- Feature 1 -->
                        <div class="p-6 bg-gray-100 rounded-lg shadow">
                            <h4 class="text-xl font-semibold">AI-Based Assessments</h4>
                            <p class="mt-2 text-gray-600">
                                Get AI-generated insights on candidate skills and potential.
                            </p>
                        </div>

                        <!-- Feature 2 -->
                        <div class="p-6 bg-gray-100 rounded-lg shadow">
                            <h4 class="text-xl font-semibold">Smart HR Search</h4>
                            <p class="mt-2 text-gray-600">
                                Find candidates based on skills, experience, and qualifications.
                            </p>
                        </div>

                        <!-- Feature 3 -->
                        <div class="p-6 bg-gray-100 rounded-lg shadow">
                            <h4 class="text-xl font-semibold">Priority Listings</h4>
                            <p class="mt-2 text-gray-600">
                                Candidates can boost their visibility through premium listings.
                            </p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Call to Action -->
            <section class="py-12 bg-indigo-600 text-white text-center">
                <h3 class="text-2xl font-bold">Ready to Find Top Talent?</h3>
                <p class="mt-2 text-lg">
                    Sign up today and experience the power of AI-driven hiring.
                </p>
                <div class="mt-6">
                    <a
                        href="#"
                        class="bg-white text-indigo-600 px-6 py-3 rounded shadow-lg font-semibold hover:bg-gray-200"
                        >Join Now</a
