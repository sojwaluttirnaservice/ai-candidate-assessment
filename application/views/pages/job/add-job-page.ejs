    <body>
        <%- include("../../components/navs/company-navbar.ejs")%>

        <main>
            <section class="section add-job-section py-10">
                <div class="container max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8">
                    <h3 class="text-2xl font-bold text-gray-800 mb-6">Job Opening</h3>

                    <form id="job-form" class="space-y-6">
                        <div>
                            <label for="job_title" class="block text-sm font-medium text-gray-700">
                                Job Title
                            </label>
                            <input
                                type="text"
                                id="job_title"
                                name="job_title"
                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 text-gray-900" />
                        </div>

                        <div>
                            <label
                                for="job_description"
                                class="block text-sm font-medium text-gray-700">
                                Job Description
                            </label>
                            <textarea
                                id="job_description"
                                name="job_description"
                                rows="3"
                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 text-gray-900"></textarea>
                            <p class="text-sm text-gray-500 mt-1">
                                Provide a detailed job description.
                            </p>
                        </div>

                        <div>
                            <label for="job_type" class="block text-sm font-medium text-gray-700">
                                Job Type
                            </label>

                            <div class="grid grid-cols-4 gap-4 items-center">
                                <!-- Full-time -->
                                <label class="flex items-center space-x-2 cursor-pointer">
                                    <input
                                        type="radio"
                                        id="full_time"
                                        name="job_type"
                                        value="Full-time"
                                        class="hidden peer" />
                                    <div
                                        class="w-full text-center border rounded-md px-4 py-2 peer-checked:bg-indigo-600 peer-checked:text-white peer-checked:border-indigo-600 hover:bg-indigo-100">
                                        Full-time
                                    </div>
                                </label>

                                <!-- Part-time -->
                                <label class="flex items-center space-x-2 cursor-pointer">
                                    <input
                                        type="radio"
                                        id="part_time"
                                        name="job_type"
                                        value="Part-time"
                                        class="hidden peer" />
                                    <div
                                        class="w-full text-center border rounded-md px-4 py-2 peer-checked:bg-indigo-600 peer-checked:text-white peer-checked:border-indigo-600 hover:bg-indigo-100">
                                        Part-time
                                    </div>
                                </label>

                                <!-- Contract -->
                                <label class="flex items-center space-x-2 cursor-pointer">
                                    <input
                                        type="radio"
                                        id="contract"
                                        name="job_type"
                                        value="Contract"
                                        class="hidden peer" />
                                    <div
                                        class="w-full text-center border rounded-md px-4 py-2 peer-checked:bg-indigo-600 peer-checked:text-white peer-checked:border-indigo-600 hover:bg-indigo-100">
                                        Contract
                                    </div>
                                </label>

                                <!-- Internship -->
                                <label class="flex items-center space-x-2 cursor-pointer">
                                    <input
                                        type="radio"
                                        id="internship"
                                        name="job_type"
                                        value="Internship"
                                        class="hidden peer" />
                                    <div
                                        class="w-full text-center border rounded-md px-4 py-2 peer-checked:bg-indigo-600 peer-checked:text-white peer-checked:border-indigo-600 hover:bg-indigo-100">
                                        Internship
                                    </div>
                                </label>
                            </div>

                            <div class="mt-4">
                                <label
                                    for="job_salary"
                                    class="block text-sm font-medium text-gray-700">
                                    Job Salary
                                </label>
                                <input
                                    id="job_salary"
                                    name="job_salary"
                                    type="number"
                                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 text-gray-900" />
                            </div>

                            <div class="mt-4">
                                <label
                                    for="job_location"
                                    class="block text-sm font-medium text-gray-700">
                                    Job Location
                                </label>
                                <input
                                    id="job_location"
                                    name="job_location"
                                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 text-gray-900" />
                            </div>

                            <div class="mt-4">
                                <label
                                    for="last_date_to_apply"
                                    class="block text-sm font-medium text-gray-700">
                                    Last Day to Apply</label
                                >
                                <input
                                    id="last_date_to_apply"
                                    name="last_date_to_apply"
                                    type="date"
                                    class="mt-1 bklock w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 px-4 py-2 text-gray-900" />

                                <input
                                    type="text"
                                    name="company_id_fk"
                                    value="<%= company.id %>"
                                    hidden />
                            </div>
                        </div>

                        <div class="flex justify-end space-x-3">
                            <button
                                type="button"
                                class="bg-gray-200 text-gray-700 px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-300">
                                Cancel
                            </button>
                            <button
                                type="submit"
                                id="save-job-btn"
                                class="bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </body>
