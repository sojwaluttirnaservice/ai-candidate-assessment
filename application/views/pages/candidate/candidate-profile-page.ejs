<!-- This is just for referecne, copy this layout for company pages -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>

        <!-- Common links -->
        <%- include("../../common/common-links.ejs")%>

        <!-- Company common linksi -->

        <style>
            @keyframes border-flow {
                0% {
                    transform: rotate(0deg);
                }
                100% {
                    transform: rotate(360deg);
                }
            }

            .animate-border {
                background-size: 300% 300%;
                animation: border-flow 6s linear infinite;
                filter: blur(6px);
                opacity: 0.8;
            }

        </style>

        <!-- Common scripts -->
        <%-include("../../common/common-scripts.ejs")%>

        <!-- Company common scripts -->
        <%- include("../../common/common-candidate-scripts.ejs")%>

        <script
            src="/javascripts/handlers/candidate/candidateProfileHandler.js"
            type="module"
            defer></script>
    </head>
    <body>
        <%- include("../../components/navs/candidate-navbar.ejs")%>

        <main>

            <!-- Upload image modal -->

            <!-- Modal -->
            <div id="image-upload-modal" data-role="modal" class="fixed inset-0 hidden  flex items-center justify-center z-[500]">
                <div class="bg-white border border-gray-400 shadow-lg rounded-lg p-6  w-[350px] md:max-w-md ">
                    <form id="upload-image-form">
                        <h2 class="text-lg font-semibold mb-4">Upload New Profile Image</h2>

                        <input
                            type="file"
                            id="profile-image-input"
                            accept="image/*"
                            name="candidateImage"
                            class="block w-full text-sm text-gray-700 border border-gray-300 rounded-md p-2 focus:ring-indigo-500 focus:border-indigo-500"
                        />
                        <input type="text" name="old_image_name" value="<%= candidate.image_name%>" hidden>
                        <input type="text" name="id" value="<%= candidate.id %>" hidden>

                        <div class="mt-4 flex justify-end space-x-2">
                            <button
                                type="button"
                                data-role="close-modal-btn"
                                class="px-4 py-2 bg-gray-300 text-gray-800 rounded-md hover:bg-gray-400 focus:outline-none">
                                Close
                            </button>
                            <button
                                type="button"
                                id="upload-candidate-image-btn"
                                class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                                Upload
                            </button>
                        </div>
                    </form>
                </div>
            </div>



            <!-- PROFILE SECTION PART -->
            <section>
                <div class="container">
                    <div class="mt-4">
                        <div class="md:grid md:grid-cols-3 md:gap-6">
                            <div class="md:col-span-1">
                                <div class="px-4 sm:px-0">
                                    <h3 class="text-lg font-medium leading-6 text-gray-900">
                                        Profile
                                    </h3>
                                    <p class="mt-1 text-sm text-gray-600">
                                        Your personal information goes here
                                    </p>
                                </div>
                            </div>
                            <div class="mt-5 md:mt-0 md:col-span-2">
                                <form id="personal-details-form">
                                    <div class="shadow sm:rounded-md sm:overflow-hidden">
                                        <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                                            <div>
                                                <label
                                                    class="block text-sm font-medium text-gray-700">
                                                    Photo
                                                </label>
                                                <div class="mt-1 flex items-center">
                                                    <!-- <span
                                                        class="inline-block size-16 rounded-full overflow-hidden bg-gray-100">
                                                        <img
                                                        src="<%= `${candidate.profileImageUrl}/${candidate.image_name}`%>"
                                                            alt="" />
                                                    </span> -->

                                                    <div>
                                                        <div class="flex items-center justify-center size-[100px] overflow-hidden bg-red-500 rounded-full">

                                                            <img
                                                            class="w-full h-full"
                                                            src="<%= `${candidate.profileImageUrl}/${candidate.image_name}`%>"
                                                            alt="" />
                                                        </div>
                                                    </div>
                                                    <button
                                                        type="button"
                                                        data-role="open-modal-btn"
                                                        data-target-modal="image-upload-modal"
                                                        class="ml-5 bg-white py-2 px-3 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                                        Change
                                                    </button>
                                                </div>
                                            </div>

                                            <!-- Name -->
                                            <div class="grid grid-cols-3 gap-6">
                                                <div class="col-span-3 sm:col-span-2">
                                                    <label
                                                        for="name"
                                                        class="block text-sm font-medium text-gray-700">
                                                        Full Name
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        <input
                                                            type="text"
                                                            name="name"
                                                            id="name"
                                                            value="<%=candidate.name %>"
                                                            class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                            placeholder="e.g Aarav Sharma" />
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Email -->
                                            <div class="grid grid-cols-3 gap-6">
                                                <div class="col-span-3 sm:col-span-2">
                                                    <label
                                                        for="email"
                                                        class="block text-sm font-medium text-gray-700">
                                                        Email
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        <input
                                                            type="text"
                                                            name="email"
                                                            id="email"
                                                            value="<%=candidate.email %>"
                                                            class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                            placeholder="e.g aaravsharma@gmail.com" />
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Mobile -->
                                            <div class="grid grid-cols-3 gap-6">
                                                <div class="col-span-3 sm:col-span-2">
                                                    <label
                                                        for="mobile"
                                                        class="block text-sm font-medium text-gray-700">
                                                        Mobile
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        <input
                                                            type="text"
                                                            name="mobile"
                                                            id="mobile"
                                                            value="<%=candidate.mobile %>"
                                                            class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                            placeholder="e.g. 8989844221" />
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Gender -->
                                            <div class="grid grid-cols-3 gap-6">
                                                <div class="col-span-3 sm:col-span-2">
                                                    <label
                                                        for="gender"
                                                        class="block text-sm font-medium text-gray-700">
                                                        Gender
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        <select
                                                            type="text"
                                                            name="gender"
                                                            id="gender"
                                                            class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500">
                                                            <option value="Male" <%= candidate.gender === 'Male' ? 'selected' : '' %>>Male</option>
                                                            <option value="Female" <%= candidate.gender === 'Female' ? 'selected' : '' %>>Female</option>
                                                            <option value="Other" <%= candidate.gender === 'Other' ? 'selected' : '' %>>Other</option>                                                            
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- years of experience -->
                                            <div class="grid grid-cols-3 gap-6">
                                                <div class="col-span-3 sm:col-span-2">
                                                    <label
                                                        for="years_of_experience"
                                                        class="block text-sm font-medium text-gray-700">
                                                        Years of Experience
                                                    </label>
                                                    <div class="mt-1 flex rounded-md shadow-sm">
                                                        <select
                                                            type="text"
                                                            name="years_of_experience"
                                                            id="years_of_experience"
                                                            class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500">
                                                            <option value="0" <%= candidate.years_of_experience == 0 ? 'selected' : '' %>>Fresher</option>
                                                            <% for (let i = 1; i <= 15; i++) { %>
                                                                <option value="<%= i %>" <%= candidate.years_of_experience == i ? 'selected' : '' %>>
                                                                    <%= i %> Year<%= i > 1 ? 's' : '' %>
                                                                </option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>



                                            <div>
                                                <div>
                                                    <div class="flex items-center justify-between">
                                                        <label
                                                            for="candidate_objective"
                                                            class="block text-sm font-medium text-gray-700">
                                                            Objetive
                                                        </label>
                                                        <div class="flex justify-center">
                                                            <!-- Advanced Generate Button -->
                                                            <button
                                                                data-candidate='<%= JSON.stringify(candidate) %>'
                                                                data-candidte-skills="<%=candidateSkills%>"
                                                                data-candidate-education='<%= JSON.stringify(education) %>'
                                                                id="generate-objective-btn"
                                                                type='button' 
                                                                class="relative flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-medium py-2 px-6 rounded-full shadow-lg transition-all duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:bg-gray-400 disabled:cursor-not-allowed"
                                                                >
                                                                <span id="generate-text" class="flex items-center gap-2">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 animate-bounce" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                                        <path d="M12 2l2.6 5.3L20 8l-4 4 1 5.6L12 14l-5 3 1-5.6-4-4 5.4-.7L12 2z"/>
                                                                        <path d="M5 19l2-2m10 2l-2-2m-6 2l2-2m6 2l-2-2"/>
                                                                    </svg>
                                                                    Generate
                                                                </span>
 
                                                            </button>

                                                        </div>
                                                        
                                                </div>

                                            </div>
                                                <div class="mt-1">
                                                    <textarea
                                                        id="candidate_objective"
                                                        name="candidate_objective"
                                                        rows="3"
                                                        
                                                        class="shadow-sm text-left focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                        placeholder="Write something..."><%=candidate.candidate_objective?.trim() %></textarea>

                                                    
                                                </div>
                                                <!-- <p class="mt-2 text-sm text-gray-500">
                                                    Brief description for your profile. URLs are
                                                    hyperlinked.
                                                </p> -->
                                            </div>

                                            <div>
                                                <div>
                                                    <div class="flex items-center justify-between">
                                                        <label
                                                            for="candidate_summary"
                                                            class="block text-sm font-medium text-gray-700">
                                                            Summary
                                                        </label>
                                                        <div class="flex justify-center">
                                                            <!-- Advanced Generate Button -->
                                                            <button
                                                                data-candidate='<%= JSON.stringify(candidate) %>'
                                                                data-candidate-skills='<%= JSON.stringify(candidateSkills) %>'
                                                                data-candidate-education='<%= JSON.stringify(education) %>'
                                                                id="generate-summary-btn"
                                                                type='button'
                                                                class="relative flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-medium py-2 px-6 rounded-full shadow-lg transition-all duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:bg-gray-400 disabled:cursor-not-allowed"
                                                               >
                                                                <span id="generate-text" class="flex items-center gap-2">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 animate-bounce" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                                        <path d="M12 2l2.6 5.3L20 8l-4 4 1 5.6L12 14l-5 3 1-5.6-4-4 5.4-.7L12 2z"/>
                                                                        <path d="M5 19l2-2m10 2l-2-2m-6 2l2-2m6 2l-2-2"/>
                                                                    </svg>
                                                                    Generate
                                                                </span>
 
                                                            </button>
                                                        </div>
                                                        
                                                </div>

                                            </div>
                                                <div class="mt-1">
                                                    <textarea
                                                        id="candidate_summary"
                                                        name="candidate_summary"
                                                        rows="3"
                                                        
                                                        class="shadow-sm text-left focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                        placeholder="Write something..."><%=candidate.candidate_summary?.trim() %></textarea>

                                                    <input type="text" name="id" value="<%=candidate.id%>" hidden>
                                                </div>
                                                <!-- <p class="mt-2 text-sm text-gray-500">
                                                    Brief description for your profile. URLs are
                                                    hyperlinked.
                                                </p> -->
                                            </div>
                                        </div>
                                        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                                            <button
                                                type="button"
                                                data-role="update-personal-details-btn"
                                                class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                                Save Personal Details
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section>
                
                <div class="hidden sm:block" aria-hidden="true">
                    <div class="py-5">
                        <div class="border-t border-gray-200"></div>
                    </div>
                </div>
            </section>


            

                <!-- SKILLS SECTION -->
            <section>
                <div class="container">
                    <div class="mt-4">
                        <div class="md:grid md:grid-cols-3 md:gap-6">
                            <div class="md:col-span-1">
                                <div class="px-4 sm:px-0">
                                    <h3 class="text-lg font-medium leading-6 text-gray-900">
                                        Skills
                                    </h3>
                                    <p class="mt-1 text-sm text-gray-600">
                                        Select the skills you possess.
                                    </p>
                                </div>
                            </div>

                            <div class="mt-5 md:mt-0 md:col-span-2">
                                <form id="skills-form">
                                    <div class="shadow sm:rounded-md sm:overflow-hidden">
                                        <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                                            <!-- Skill List -->
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700">
                                                    Select Your Skills
                                                </label>
                                                <div class="mt-2 grid grid-cols-3 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
                                                    <% skills.forEach(skill => { %>
                                                        <div class="flex items-center">
                                                            <input
                                                                data-role="skill-checkbox"
                                                                data-candidate-id="<%= candidate.id %>"
                                                                type="checkbox"
                                                                name="skills"
                                                                id="<%= skill.name %>"
                                                                value="<%= skill.id %>"
                                                                <%= candidateSkills.some(candidateSkill => candidateSkill.skill_id === skill.id) ? 'checked' : '' %>
                                                                class="h-5 w-5 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                                                            >
                                                            <label for="<%= skill.name %>" class="ml-2 text-sm text-gray-700">
                                                                <%= skill.skill_name %>
                                                            </label>
                                                        </div>
                                                    <% }) %>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                                            <button
                                                type="button"
                                                hidden
                                                data-role="update-skills-btn"
                                                class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                                Save Skills
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        

            <!-- line -->

            <section>
                <div class="hidden sm:block" aria-hidden="true">
                    <div class="py-5">
                        <div class="border-t border-gray-200"></div>
                    </div>
                </div>
            </section>


            <!-- EDUCATION SECTION -->
            <section class="mb-10">
                <div class="container">
                    <div class="mt-4">
                        <div class="md:grid md:grid-cols-3 md:gap-6">
                            <div class="md:col-span-1">
                                <div class="px-4 sm:px-0">
                                    <h3 class="text-lg font-medium leading-6 text-gray-900">
                                        Education Details
                                    </h3>
                                    <p class="mt-1 text-sm text-gray-600">
                                        Add and manage your educational qualifications.
                                    </p>
                                </div>
                            </div>

                            <div class="mt-5 md:mt-0 md:col-span-2">
                                <div >
                                    <div class="shadow sm:rounded-md sm:overflow-hidden">
                                        <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
                                            <!-- Education List -->
                                            <div>
                                                <label class="block text-sm font-medium text-gray-700">
                                                    Education Details
                                                </label>
                                                <ul id="education-list" class="space-y-4">


                                                    <% education.forEach((edu, index) => { %>
                                                        <li>

                                                        
                                                        <form id="candidate-education-form-<%=index%>" class="p-4 border rounded-lg">
                                                            
                                                            <!-- Candidate education form -->
                                                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                                                <div>
                                                                    <label class="block text-sm font-medium text-gray-700">
                                                                        Degree Type (Read-only)
                                                                    </label>
                                                                    <input
                                                                        type="text"
                                                                        name="degree_type"
                                                                        value="<%= edu.degree_type %>"
                                                                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                                        readonly
                                                                    />
                                                                </div>

                                                                <div>
                                                                    <label class="block text-sm font-medium text-gray-700">
                                                                        Institution Name
                                                                    </label>
                                                                    <input
                                                                        type="text"
                                                                        name="institution_name"
                                                                        value="<%= edu.institution_name %>"
                                                                        id="institution_<%= edu.id %>"
                                                                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                                    />
                                                                </div>

                                                                <div>
                                                                    <label class="block text-sm font-medium text-gray-700">
                                                                        Board/University
                                                                    </label>
                                                                    <input
                                                                        type="text"
                                                                        name="board_university"
                                                                        value="<%= edu.board_university %>"
                                                                        id="board_<%= edu.id %>"
                                                                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                                    />
                                                                </div>

                                                                <div>
                                                                    <label class="block text-sm font-medium text-gray-700">
                                                                        Passing Year
                                                                    </label>
                                                                    <input
                                                                        type="number"
                                                                        name="passing_year"
                                                                        value="<%= edu.passing_year %>"
                                                                        id="year_<%= edu.id %>"
                                                                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                                    />
                                                                </div>

                                                                <div>
                                                                    <label class="block text-sm font-medium text-gray-700">
                                                                        Percentage/CGPA
                                                                    </label>
                                                                    <input
                                                                        type="number"
                                                                        name="percentage_cgpa"
                                                                        value="<%= edu.percentage_cgpa %>"
                                                                        id="cgpa_<%= edu.id %>"
                                                                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                                    />
                                                                </div>

                                                                <div>
                                                                    <label class="block text-sm font-medium text-gray-700">
                                                                        Specialization
                                                                    </label>
                                                                    <input
                                                                        type="text"
                                                                        name="specialization"
                                                                        value="<%= edu.specialization %>"
                                                                        id="specialization_<%= edu.id %>"
                                                                        class="focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300 p-2 bg-white text-gray-900 placeholder-gray-400 outline-none focus:ring-2 focus:ring-indigo-500"
                                                                    />

                                                                </div>
                                                            </div>

                                                            <!-- Form buttons -->
                                                            <div class="mt-4 flex justify-end space-x-2">
                                                                <button
                                                                    type="button"
                                                                  
                                                                    data-form-index="<%=index%>"
                                                                    class="update-education-details-btn inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
                                                                    >
                                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                                                    </svg>
                                                                    Update
                                                                </button>
                                                            
                                                                <button
                                                                    type="button"
                                                                    data-education-id="<%=edu.id%>"
                                                                    class="delete-candidate-education-btn inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                                                                    >
